<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp">

        <!-- Texto de Bienvenida -->
        <TextView
            android:id="@+id/tv_welcome_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Paciente"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/patient_icon"/>

        <!-- SecciÃ³n de datos del paciente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:background="@android:color/white"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paciente: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/patient"/>
        </LinearLayout>

        <!-- Botones principales del layout -->
        <Button
            android:id="@+id/btn_view_prescriptions_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizar Mis Recetas"
            android:drawableStart="@drawable/ic_prescription_view"
            android:drawablePadding="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</RelativeLayout>
