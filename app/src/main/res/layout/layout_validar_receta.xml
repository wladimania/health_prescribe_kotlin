<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/editLog"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:autoText="true"
            android:inputType="none|textMultiLine"
            android:text="VALIDACIÃ“N DE HUELLAS PARA EL PACIENTE "
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/imageViewRegister"
                    android:layout_width="117dp"
                    android:layout_height="106dp"
                    android:clickable="true"
                    android:src="@drawable/prescription" />

                <Button
                    android:id="@+id/buttonVerifyAutoOn"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Registro" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/imageViewVerify"
                    android:layout_width="117dp"
                    android:layout_height="106dp"
                    android:clickable="true"
                    android:src="@drawable/prescription" />

                <Button
                    android:id="@+id/textViewResultdos"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Validar Registro" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginTop="16dp"
            android:text="Por favor, pide al paciente que coloque su huella dactilar para validar la receta." />

        <CheckBox
            android:id="@+id/checkBoxMatchedValido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valiado"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/textViewResultados"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:autoText="true"
            android:inputType="none|textMultiLine"
            android:text="Dispositivo: "
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
